{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "preferredVersions": {
        "php": "8.2",
        "wp": "beta"
    },
    "features": {
        "networking": true
    },
    "plugins": [
        "gutenberg"
    ],
    "siteOptions": {
        "blogname": "Guten-Demo"
    },
    "landingPage": "/wp-admin/post.php?post=4&action=edit",
    "steps": [
        {
            "step": "login",
            "username": "admin"
        },
        {
            "step": "installTheme",
            "themeData": {
                "resource": "wordpress.org/themes",
                "slug": "twentytwentyfour"
            },
            "options": {
                "activate": false
            }
        },
        {
            "step": "runPHP",
            "code": "<?php include 'wordpress/wp-load.php'; wp_insert_post(array( 'post_title' => 'Post title', 'post_content' => '<!-- wp:pattern {'slug':'twentytwentyfive/banner-intro-image'} /-->', 'post_status' => 'publish', 'post_author' => 1 )); "
        }
    ]
}